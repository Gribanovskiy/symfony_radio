{% extends '::base.html.twig' %}
{% block css_adds %}
	<link rel="stylesheet" href="{{ asset('bundles/appplaylist/css/login.css') }}" type="text/css" media="all">
{% endblock %}
{% block login %}
{% if error %}
   <div id="error_mess">{{ error.message }}</div>
{% endif %}
<form action="{{ path('login_check') }}" method="post" id="login_form">
   <label for="username">Логин:</label>
   <input type="text" id="username" name="_username" value="{{ last_username }}" />


   <label for="password">Пароль:</label>
   <input type="password" id="password" name="_password" />


   <button type="submit">войти</button>
</form>
{% endblock %}
{% block javascripts_adds %}
<script src="{{ asset('bundles/appplaylist/js/login.js') }}"></script>
{% endblock %}